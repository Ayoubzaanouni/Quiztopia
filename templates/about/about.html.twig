{% extends 'base.html.twig' %}

{% block title %}Project Template{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
body {
  margin: 0;
  text-align: center;
  font-family: sans-serif;
  color: #fefefe;
}
.container {
  position: relative;
  width: 320px;
  margin: 100px auto 0 auto;
  perspective: 1000px;
}

.carousel {
  position: absolute;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d; 
  animation: rotate360 15s infinite forwards linear;
}
.carousel__face { 
  position: absolute;
  width: 450px;
  height: 280.5px;
  top: 20px;
  left: 10px;
  right: 10px;
  background-size: cover;
  box-shadow:inset 0 0 0 2000px rgba(0,0,0,0.5);
  display: flex;
}

span {
  margin: auto;
  font-size: 2rem;
}


.carousel__face:nth-child(1) {
  background-image: url("https://cdn4.vectorstock.com/i/1000x1000/13/73/technological-neon-brain-vector-20721373.jpg");
  transform: rotateY(  0deg) translateZ(308px); }
.carousel__face:nth-child(2) { 
  background-image: url("https://static.vecteezy.com/system/resources/thumbnails/001/991/202/small/realistic-isolated-neon-sign-of-question-template-decoration-and-covering-on-the-wall-background-vector.jpg");
    transform: rotateY( 72deg) translateZ(308px); }
.carousel__face:nth-child(3) {
  background-image: url("https://theneoncompany.shop/wp-content/uploads/2022/07/GALAXY-BRAIN-MULTI-1-scaled.jpg");
  transform: rotateY( 144deg) translateZ(308px); }
.carousel__face:nth-child(4) {
  background-image: url("https://techcrunch.com/wp-content/uploads/2021/04/GettyImages-1282124793.jpg?w=730");
  transform: rotateY(216deg) translateZ(308px); }
  .carousel__face:nth-child(5) {
  background-image: url("https://static.vecteezy.com/system/resources/thumbnails/001/991/202/small/realistic-isolated-neon-sign-of-question-template-decoration-and-covering-on-the-wall-background-vector.jpg");
  transform: rotateY(288deg) translateZ(308px); }





@keyframes rotate360 {
  from {
    transform: rotateY(0deg);
  }
  to {
    transform: rotateY(-360deg);
  }
}

    </style>
{% endblock %}

