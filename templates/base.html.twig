<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    {% endblock %}
    
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src="js/script.js"></script> 
    {% endblock %}
</head>
<body>
{% block nav %}
    {% include 'navbar/nav.html.twig' %}
{% endblock %}
  <div class="container-fluid h-100">
    <div class="row h-100 d-flex align-items-stretch">
        <div class="col-lg-2 col-md-3 sidebar h-100">
            <div class="first_block">
                <!-- Button groups inside the sidebar -->
                <div class="d-flex flex-column mb-4">
                    <a type="button" href="{{ path('app_quizes_index') }}" class="btn mb-3 btn-outline-secondary btn-block {% if app.request.attributes.get('_route') == 'app_quizes_index' %}active{% endif %}">Dashboard</a>
                    <a type="button" href="{{ path('app_user') }}" class="btn mb-3 btn-outline-secondary btn-block {% if app.request.attributes.get('_route') == 'app_user' %}active{% endif %}">My Profile</a>
                    <a type="button" href="{{ path('app_about') }}" class="btn mb-3 btn-outline-secondary btn-block">About</a>
                </div>
                <!-- Button groups inside the sidebar -->
                {% block menu %}
                    <a href="{{ path('app_quizes_new') }}" class="btn create btn-outline-success">Create Quiz</a>
                {% endblock %}
                <div class="logout mt-auto">
                    <a href="/{{ app.user ? 'logout' : 'login' }}" class="btn btn-outline-danger btn-block">{{ app.user ? 'Logout' : 'Login' }}<i class="fa-solid fa-right-from-bracket"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-10 col-md-9">
            {% block body %}
                <h1>Welcome!</h1>
                <p>Body content goes here</p>
            {% endblock %}
        </div>
    </div>
</div>

    <footer>
        <p class="footer-text">DSI 2.1</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>
    {{ encore_entry_script_tags('app') }}
</body>
</html>
