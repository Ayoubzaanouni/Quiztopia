{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="example-wrapper">
  <h1>Quizes that i joined</h1>

  <ul>
{% for quiz in quizes|reverse %}
      <li>
        <div>
          <span class="label">Title:</span>{{ quiz.title }}
          <span class="label">Code:</span>{{ quiz.code }}
        </div>
        <div>
          <a type="button" href="{{ path('app_user_tries', {'id': quiz.id}) }}" class="btn-primary showTries" ">Show Tries</a>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}
